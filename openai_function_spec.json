{
  "name": "submit_personal_loan_answers",
  "description": "Submit validated personal loan pre\u2011qualification answers to the MCP gateway.",
  "parameters": {
    "type": "object",
    "properties": {
      "loan_amount": {
        "type": "number",
        "minimum": 1000,
        "maximum": 100000
      },
      "loan_purpose": {
        "type": "string",
        "enum": [
          "debt_consolidation",
          "home_improvement",
          "major_purchase",
          "other"
        ]
      },
      "credit_score_band": {
        "type": "string",
        "enum": [
          "<580",
          "580-669",
          "670-739",
          "740-799",
          "800+"
        ]
      },
      "employment_status": {
        "type": "string",
        "enum": [
          "employed",
          "self_employed",
          "unemployed",
          "retired",
          "other"
        ]
      },
      "annual_income": {
        "type": "number",
        "minimum": 0
      },
      "state": {
        "type": "string",
        "pattern": "^[A-Z]{2}$"
      },
      "consent_tcpa": {
        "type": "boolean"
      }
    },
    "required": [
      "loan_amount",
      "loan_purpose",
      "credit_score_band",
      "employment_status",
      "annual_income",
      "state",
      "consent_tcpa"
    ]
  }
}